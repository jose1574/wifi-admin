<header>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <!-- Botón para el menú desplegable -->
      <button class="navbar-toggler" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Menú desplegable -->
      <div class="collapse navbar-collapse" id="navbarNav" id="nav-content">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/new_user">crear usuario</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">lista de usuarios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Salir</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll(".nav-link");

      navLinks.forEach((link) => {
        if (link.getAttribute("href") === currentPath) {
          link.classList.add("active");
        } else {
          link.classList.remove("active");
        }
      });
    });

    document.addEventListener("DOMContentLoaded", () => {
      const navbarCollapse = document.getElementById("navbarNav"); // Función para cambiar la clase 'show' dinámicamente
      function toggleShow() {
        if (navbarCollapse.classList.contains("show")) {
          navbarCollapse.classList.remove("show");
        } else {
          navbarCollapse.classList.add("show");
        }
      }
      const navbarToggler = document.querySelector(".navbar-toggler");
      navbarToggler.addEventListener("click", toggleShow);
    });
  </script>
</header>
